<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History App"
        android:textColor="#EEFFFFFF"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/Searchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="107dp"
        android:text="Search"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/resulttextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/ClearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="105dp"
        android:text="Clear"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/resulttextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Searchbutton"
        app:layout_constraintTop_toBottomOf="@+id/ageInput"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:hint="Enter Age"
        android:inputType="text"
        android:minHeight="48dp"
        android:text=""
        android:textColor="#F5FFFFFF"
        android:textColorHighlight="#F8FFFFFF"
        android:textColorHint="#FAFFFFFF"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/Searchbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/resulttextView2"
        android:layout_width="379dp"
        android:layout_height="275dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="24dp"
        android:text=""
        android:textColor="#E9FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Clearbutton2"
        tools:ignore="MissingConstraints,UnknownId" />

</androidx.constraintlayout.widget.ConstraintLayout>